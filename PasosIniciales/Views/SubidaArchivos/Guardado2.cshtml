<h3>Datos del nuevo producto (con multiples imagenes)</h3>
<table class="table">
    <tr>
        <td>ID</td>
        <td>@ViewBag.producto.Id</td>
    </tr>
    <tr>
        <td>Nombre</td>
        <td>@ViewBag.producto.Nombre</td>
    </tr>
    <tr>
        <td>Foto(s)</td>
        <td>
            @foreach(var foto in ViewBag.producto.Fotos)
            {
                <img src="~/images/@foto" width="120px" height="120px">
            }
        </td>
    </tr>
    <tr>
        <td>Precio</td>
        <td>@ViewBag.producto.Precio</td>
    </tr>
    <tr>
        <td>Cantidad</td>
        <td>@ViewBag.producto.Cantidad</td>
    </tr>
</table>
