<h3>Lista de productos disponibles</h3>
<table class="table">
    <tr>
        <td>ID</td>
        <td>Nombre</td>
        <td>Precio</td>
        <td>Foto</td>
        <td>Acciones</td>
    </tr>
    @foreach(var producto in ViewBag.productos)
    {
        <tr>
            <td>@producto.Id</td>
            <td>@producto.Nombre</td>
            <td>@producto.Precio</td>
            <td><img src="~/images/@producto.Foto" width="100" height="100"/></td>
            <td><a class="btn btn-success" asp-controller="carrito" asp-action="comprar" asp-route-id="@producto.Id">COMPRAR</a></td>
        </tr>    
    }
</table>