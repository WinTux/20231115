@{
}

<h3>Lista de productos (Desde base de datos)</h3>
<table class="table">
    <tr>
        <td>ID</td>
        <td>Nombre</td>
        <td>Precio</td>
        <td>Foto</td>
    </tr>
    @foreach (Producto3 producto in ViewBag.productos)
    {
        <tr>
            <td>@producto.Id</td>
            <td>@producto.Nombre</td>
            <td>@producto.Precio</td>
            <td>@producto.Foto</td>
        </tr>
    }
</table>